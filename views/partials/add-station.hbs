<form class="box" action="/dashboard/addstation" method="POST">
  <label>Add Station:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label class="label">Name</label>
        <input class="input" placeholder="Stations Name" type="text" name="name">
      </div>
      <div class="field">
        <label class="label">Latitude</label>
        <input class="input" placeholder="00.00" type="text" name="lat">
      </div>
      <div class="field">
        <label class="label">Longitude</label>
        <input class="input" placeholder="00.00" type="text" name="lng">
      </div>
    </div>
  </div>
  <button class="button is-link">Add Station</button>
</form>